{
  "compilerOptions": {
    "target": "ES2017",                          
    "module": "commonjs",                     
    "lib": ["ES6"],        
    "allowJs": true,                     
    "outDir": "./dist",                        
    "rootDir": "./src",                       
    "removeComments": true,                
    "baseUrl": ".",                       
     "typeRoots": [
       "./node_modules/@types",
       "./src/@types"
     ],                       
    "esModuleInterop": true,                  
    "resolveJsonModule": true,
    "experimentalDecorators": true,        
    "emitDecoratorMetadata": true,         
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true ,
    "paths": {
      "@controller/*":["./src/controller/*"],
      "@entity/*":["./src/entity/*"],
      "@config/*":["./src/config/*"],
      "@global/*":["./src/global/*"],
      "@database/*":["./src/database/*"],
      "@errors/*":["./src/errors/*"],
      "@services/*":["./src/services/*"],
      "@repository/*":["./src/repository/*"]
    }
  },
  "include": [
    "src/**/*"
  ]
}